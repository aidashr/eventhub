@page "/signup"
<div class="d-flex justify-content-center w-100 pt-lg-5 pt-md-5 pt-sm-2">
    <div class="d-flex flex-column card p-4 m-2" style="width: 400px;">
        <h4 class="text-center font-weight-bold mb-4">Sign up</h4>
        <div class="card bg-light w-100 p-1 mb-3">
            <ul class="nav nav-pills nav-fill" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link font-weight-bold active" id="pills-cafe-tab" data-toggle="pill"
                        href="#pills-cafe" role="tab" aria-controls="pills-cafe" aria-selected="true">Cafe</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link font-weight-bold" id="pills-user-tab" data-toggle="pill" href="#pills-user"
                        role="tab" aria-controls="pills-user" aria-selected="false">User</a>
                </li>
            </ul>
        </div>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-cafe" role="tabpanel" aria-labelledby="pills-cafe-tab">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@CafeName" type="text" placeholder="Cafe Name">
                </div>
                <div class="@AlertClass(@CafeNameAlert)">@CafeNameAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Username" type="text" placeholder="Username">
                </div>
                <div class="@AlertClass(@UsernameAlert)">@UsernameAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i
                                class="fas fa-mobile-alt fa-lg"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@PhoneNumber" type="text" placeholder="Phone number">
                </div>
                <div class="@AlertClass(@PhoneNumberAlert)">@PhoneNumberAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-paper-plane"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Email" type="text" placeholder="Email">
                </div>
                <div class="@AlertClass(@EmailAlert)">@EmailAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-key"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Password" type="password" placeholder="Password">
                </div>
                <div class="@AlertClass(@PasswordAlert)">@PasswordAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-redo"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@ConfirmPassword" type="password"
                        placeholder="Confirm Password">
                </div>
                <div class="@AlertClass(@ConfirmPasswordAlert)">@ConfirmPasswordAlert</div>
                <button class="btn btn-primary rounded-pill font-weight-bold w-100 mb-3"
                    @onclick="OnCafeSignupClickMethod">Sign up</button>
                <a href="/login">
                    <button class="btn btn-outline-primary rounded-pill font-weight-bold w-100">Already have an
                        account</button>
                </a>
            </div>
            <div class="tab-pane fade" id="pills-user" role="tabpanel" aria-labelledby="pills-user-tab">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@FirstName" type="text" placeholder="First Name">
                    <input class="form-control text-left" @bind="@LastName" type="text" placeholder="Last Name">
                </div>
                <div class="@AlertClass(@NameAlert)">@NameAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Username" type="text" placeholder="Username">
                </div>
                <div class="@AlertClass(@UsernameAlert)">@UsernameAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i
                                class="fas fa-mobile-alt fa-lg"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@PhoneNumber" type="text" placeholder="Phone number">
                </div>
                <div class="@AlertClass(@PhoneNumberAlert)">@PhoneNumberAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-paper-plane"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Email" type="text" placeholder="Email">
                </div>
                <div class="@AlertClass(@EmailAlert)">@EmailAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-key"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@Password" type="password" placeholder="Password">
                </div>
                <div class="@AlertClass(@PasswordAlert)">@PasswordAlert</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width: 40px;"><i class="fas fa-redo"></i></span>
                    </div>
                    <input class="form-control text-left" @bind="@ConfirmPassword" type="password"
                        placeholder="Confirm Password">
                </div>
                <div class="@AlertClass(@ConfirmPasswordAlert)">@ConfirmPasswordAlert</div>
                <button class="btn btn-primary rounded-pill font-weight-bold w-100 mb-3"
                    @onclick="OnCafeSignupClickMethod">Sign up</button>
                <a href="/login">
                    <button class="btn btn-outline-primary rounded-pill font-weight-bold w-100">Already have an
                        account</button>
                </a>
            </div>
        </div>
    </div>
</div>